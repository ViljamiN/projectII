<% layout("./layouts/layout.eta") %>

<h1>Login</h1>
<form method="POST" action="/auth/login">
    Email:<tab>
    <input type="email" name="email"><br>
    Password:<tab>
    <input type="password" name="password">
    <button type="submit">Login</button>
</form>
<% if (it.error) { %>
    <h2><%=it.error%></h2>
<% }; %>